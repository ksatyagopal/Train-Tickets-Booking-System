    ViewData["Title"] = "LiveStation";
}

<h1>LiveStation</h1>

<h4>Reach</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="LiveStation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="StationCode" class="control-label"></label>
